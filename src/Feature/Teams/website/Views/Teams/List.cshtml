@using Glass.Mapper.Sc.Web.Mvc
@model Hackathon.Feature.Teams.ViewModels.TeamList

<div class="row">
    @if (!string.IsNullOrEmpty(Model.Title))
    {<div class="span12">
        <h4>@Model.Title</h4>
    </div>}

    @foreach (var team in Model.Teams)
    {
        <div class="span3">
            <div class="pricing-box-wrap special">
                <div class="pricing-heading">
                    <h3>@team.TeamName</h3>
                </div>
                <div class="pricing-terms">
                    <h6>@team.Country</h6>
                </div>
                <div class="pricing-content">
                    <ul>
                        @foreach (var member in team.Members)
                        {
                            <li>
                                @member.FirstName @member.LastName
                                @if (!string.IsNullOrEmpty(member.Twitter))
                                {<a href="@member.Twitter"><i class="icon-twitter">&nbsp;</i></a>}
                                @if (!string.IsNullOrEmpty(member.LinkedIn))
                                {<a href="@member.LinkedIn"><i class="icon-linkedin">&nbsp;</i></a>}
                            </li>
                        }

                        @for(int i = team.Members.Count(); i < 3; i++)
                        {
                            <li>&nbsp;</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }

</div>
